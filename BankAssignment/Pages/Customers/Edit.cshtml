@page
@model BankAssignment.Pages.Customers.EditModel
@{
}

<div class="card bg-dark text-light border-2 border-light my-5 bg-opacity-75">
    <div class="card-title text-center h2">Update @Model.Givenname @Model.Surname</div>
    <div class="card-body">
        <form method="post">
            <label class="form-label" style="display:none" asp-for="CustomerId"></label>
            <input type="hidden" class="form-control" asp-for="CustomerId" />
            <span asp-validation-for="CustomerId" class="field-validation-error text-danger"></span>
            <div class="d-flex justify-content-between border-bottom border-light">
                <div class="form-floating mb-3 text-dark col-3">
                    <input type="text" class="form-control" asp-for="Givenname" />
                    <label class="form-label" asp-for="Givenname">Given name</label>
                    <span asp-validation-for="Givenname" class="field-validation-error text-danger"></span>
                </div>
                <div class="form-floating mb-3 text-dark col-3">
                    <input type="text" class="form-control" asp-for="Surname" />
                    <label class="form-label" asp-for="Surname">Surname</label>
                    <span asp-validation-for="Surname" class="field-validation-error text-danger"></span>
                </div>
                <div class="form-floating mb-3 text-dark col-2">
                    <select class="form-control" asp-for="Gender" asp-items="@Model.Genders"></select>
                    <label class="form-label" asp-for="Gender">Gender</label>
                    <span asp-validation-for="Gender" class="field-validation-error text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-between my-3 border-bottom border-light">
                <div class="form-floating mb-3 text-dark col-3">
                    <input type="text" class="form-control" asp-for="Streetaddress" />
                    <label class="form-label" asp-for="Streetaddress">Street address</label>
                    <span asp-validation-for="Streetaddress" class="field-validation-error text-danger"></span>
                </div>
                <div class="form-floating mb-3 text-dark col-2">
                    <input type="text" class="form-control" asp-for="City" />
                    <label class="form-label" asp-for="City">City</label>
                    <span asp-validation-for="City" class="field-validation-error text-danger"></span>
                </div>
                <div class="form-floating mb-3 text-dark col-2">
                    <input input-type="text" class="form-control" asp-for="Zipcode" />
                    <label class="form-label" asp-for="Zipcode">Zipcode</label>
                    <span asp-validation-for="Zipcode" class="field-validation-error text-danger"></span>
                </div>
                <div class="form-floating mb-3 text-dark col-2">
                    <select class="form-control" asp-for="Country" asp-items="@Model.Countries"></select>
                    <label class="form-label" asp-for="Country">Country</label>
                    <span asp-validation-for="Country" class="field-validation-error text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <div class="form-floating mb-3 text-dark col-3">
                    <input type="text" class="form-control" asp-for="SocialSecurityNumber" />
                    <label class="form-label" asp-for="SocialSecurityNumber">Social security number</label>
                    <span asp-validation-for="SocialSecurityNumber" class="field-validation-error text-danger"></span>
                </div>
                <div class="form-floating mb-3 text-dark col-2">
                    <input type="text" class="form-control" asp-for="TelephoneNumber" />
                    <label class="form-label text-center" asp-for="TelephoneNumber">Phone number</label>
                    <span asp-validation-for="TelephoneNumber" class="field-validation-error text-danger"></span>
                </div>
                <div class="form-floating mb-3 text-dark col-2">
                    <input type="email" class="form-control" asp-for="Emailaddress" />
                    <label class="form-label text-center" asp-for="Emailaddress">Email</label>
                    <span asp-validation-for="Emailaddress" class="field-validation-error text-danger"></span>
                </div>
                <div class="form-floating mb-3 text-dark col-2">
                    <input type="date" class="form-control" asp-for="Birthday" />
                    <label class="form-label" asp-for="Birthday">Birthday</label>
                    <span asp-validation-for="Birthday" class="field-validation-error text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-outline-warning mb-3">Update</button>
            </div>
        </form>
    </div>
</div>